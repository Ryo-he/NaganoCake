<div class="container">
<div class="row">
<div class ="col-ml-4"></div>
<h3><%= @customer.first_name %><%= @customer.last_name %>の会員情報編集</h3>
</div>
</div>
<%= form_with model: @customer,url: admin_customer_path, local: true do |f| %>
<div class="container">
<div class="row">
<div class ="col-ml-6"></div>
<table width="50%">
<tbody>
<tr>
<td>会員ID</td>
<td><%= @customer.id %></td>
</tr>
<tr>
<td>氏名</td>
<td><%= f.text_field :first_name %></td><td><%= f.text_field :last_name %></td>
</tr>
<tr>
<td>フリガナ</td>
<td><%= f.text_field :first_name_kana %></td><td><%= f.text_field :last_name_kana %></td>
</tr>
<tr>
<td>郵便番号</td>
<td><%= f.text_field :postal_code %></td>
</tr>
<tr>
<td>住所</td>
<td><%= f.text_field :address %></td>
</tr>
<tr>
<td>電話番号</td>
<td><%= f.text_field :telephone_number %></td>
</tr>
<tr>
<td>メールアドレス</td>
<td><%= f.text_field :email %></td>
</tr>
<tr>
<td>会員ステータス</td>
<td>
<%= f.label :is_active, '有効', value: true %>
<%= f.radio_button :is_active, :true %>
<%= f.label :is_active, '退会', value: false %>
<%= f.radio_button :is_active, :false %>
</td>
</tr>
<tr>
<td>
<input class="btn btn-success" type="submit" value= "変更を保存">
<% end %>
</td>
</tr>
</tbody>
</table>
</div>
</div>