<h3><%= @customer.first_name %><%= @customer.last_name %>の会員情報編集</h3>
<%= form_with model: @customer,url: admin_customer_path, local: true do |f| %>
<table>
<tbody>
<tr>
<td>会員ID</td>
<td><%= @customer.id %></td>
</tr>
<tr>
<td>氏名</td>
<td><%= f.text_field :first_name %><space><%= f.text_field :last_name %></space></td>
</tr>
<tr>
<td>フリガナ</td>
<td><%= f.text_field :first_name_kana %><space><%= f.text_field :last_name_kana %></space></td>
</tr>
<tr>
<td>郵便番号</td>
<td><%= f.text_field :postal_code %></td>
</tr>
<tr>
<td>住所</td>
<td><%= f.text_field :address %></td>
</tr>
<tr>
<td>電話番号</td>
<td><%= f.text_field :telephone_number %></td>
</tr>
<tr>
<td>メールアドレス</td>
<td><%= f.text_field :email %></td>
</tr>
<tr>
<td>会員ステータス</td>
<td>
<%= f.label :is_active, :'validity', value: 1 %>
<%= f.radio_button :is_active, :'validity' %>
<%= f.label :is_active, :'withdrawal', value: 0 %>
<%= f.radio_button :is_active, :'withdrawal' %>
</td>
</tr>
<tr>
<td>
<input class="btn btn-success" type="submit" value= "変更を保存">
</td>
</tr>
<% end %>