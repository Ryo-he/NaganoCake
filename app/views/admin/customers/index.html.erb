<div class="container">
<div class="row">
<div class ="col-ml-4"></div>
<h3>会員一覧</h3>
</div>
</div>
<div class="container">
<div class="row">
<div class ="col-ml-6"></div>
<table width="80%">
<tbody>
<tr>
<th>会員ID</th>
<th>氏名</th>
<th>メールアドレス</th>
<th>ステータス</th>
</tr>
<% @customers.each do |customer| %>
<tr>
<td><%= customer.id %></td>
<td><%= link_to admin_customer_path(customer.id) do %>
<%= customer.first_name %>
<%= customer.last_name %>
<% end %>
</td>
<td><%= customer.email %></td>
<td>
<% if customer.is_active == true %>
<div class="text-success">有効</div>
<% else %>
<div class="text-secondary">退会</div>
<% end %>
</td>
<% end %>
</tr>
</tbody>
</table>
</div>
</div>
<%= paginate @customers %>

