<div class="container">
<div class="row">
<div class ="col-ml-4"></div>
<h3>ジャンル一覧・追加</h3>
</div>
</div>

<div class="container">
<div class="row">
<div class ="col-ml-4"></div>
<%= form_with model: @genre,url: admin_genres_path, local: true do |f| %>
<table>
<tbody>
<tr>
<th>
ジャンル名
</th>
<td>
<%= f.text_field :name %>
</td>
<td>
 <input class="btn btn-success" type="submit" value="新規登録">
<% end %>
</td>
</tr>
</tbody>
</table>
</div>
</div>

<div class="container">
<div class="row">
<div class ="col-m-4"></div>
<table width="50%">
<tbody>
<tr>
<th>
ジャンル
</th>
</tr>

<% @genres.each do |genre| %>
<tr>
<td>
<%= genre.name %>
</td>
<td>
<%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
</td>
<% end %>
</tr>
</tbody>
</table>
</div>
</div>