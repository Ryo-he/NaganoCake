<h1>商品編集</h1>
<%= form_with model: @item, url: admin_item_path, method: :patch, local: true do |f| %>
<p>商品画像</p>
<%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %>
<p>商品名</p>
<%= f.text_field :name %>
<p>商品説明</p>
<%= f.text_area :introduction %>
<p>ジャンル</p>
<%= f.collection_select(:genre_id, @genres, :id, :name)%>
<p>税抜き価格</p>
<%= f.text_field :price, placeholder: "1000" %><p>円</p>
<p>販売ステータス</p>
<%= f.label :is_active, :'販売中', value: 1 %>
<%= f.radio_button :is_active, :'sale' %>
<%= f.label :is_active, :'販売停止中', value: 0 %>
<%= f.radio_button :is_active, :'stop_saling' %>
<%= f.submit '変更を保存' %>
<% end %>
