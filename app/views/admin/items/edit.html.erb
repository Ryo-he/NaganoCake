<table>
<tbody>
<tr>
<th>
商品編集
</th>
<%= form_with model: @item, url: admin_item_path, local: true do |f| %>
<tr>
<td>
商品画像
</td>
<td>
<%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %>
</td>
</tr>
<tr>
<td>
商品名
</td>
<td>
<%= f.text_field :name %>
</td>
</tr>
<tr>
<td>
商品説明
</td>
<td>
<%= f.text_area :introduction %>
</td>
</tr>
<tr>
<td>
ジャンル
</td>
<td>
<%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"}) %>
</td>
</tr>
<tr>
<td>
税抜価格
</td>
<td>
<%= f.text_field :price, placeholder: "1000" %>円
</td>
</tr>
<tr>
<td>
販売ステータス
</td>
<td>
<%= f.label :is_active, :'販売中', value: 0 %>
<%= f.radio_button :is_active, :'sale' %>
<%= f.label :is_active, :'販売停止中', value: 1 %>
<%= f.radio_button :is_active, :'stop_saling' %>
</td>
</tr>
<tr>
<td>
<input class="btn btn-success" type="submit" value="変更を保存">
</td>
</tr>
</tbody>
</table>

<% end %>