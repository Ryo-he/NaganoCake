<div class="container">
<div class="row">
<div class ="col-ml-2"></div>
<h3>商品編集</h3>
</div>
</div>

<div class="container">
<div class="row">
<div class ="col-ml-"></div>
<%= form_with model: @item, url: admin_item_path, local: true do |f| %>
<table>
<tbody>
<tr>
<td>
商品画像
</td>
<td>
<%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %>
</td>
</tr>
<tr>
<td>
商品名
</td>
<td>
<%= f.text_field :name %>
</td>
</tr>
<tr>
<td>
商品説明
</td>
<td>
<%= f.text_area :introduction %>
</td>
</tr>
<tr>
<td>
ジャンル
</td>
<td>
<%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"}) %>
</td>
</tr>
<tr>
<td>
税抜価格
</td>
<td>
<%= f.text_field :price, placeholder: "1000" %>円
</td>
</tr>
<tr>
<td>
販売ステータス
</td>
<td>
<%= f.label :is_active, '販売中', value: true %>
<%= f.radio_button :is_active, :true %>
<%= f.label :is_active, '販売停止中', value: false %>
<%= f.radio_button :is_active, :false %>
</td>
</tr>
<tr>
<td>
<input class="btn btn-success" type="submit" value="変更を保存">
<% end %>
</td>
</tr>
</tbody>
</table>
</div>
</div>