<div class="container">
<div class="row">
<div class ="col-ml-6 mt-3">
<table width="120%">
<tbody>
<tr>
<th>
商品一覧
</th>
</tr>
<tr>
<td>商品ID</td>
<td>商品名</td>
<td>税抜き価格</td>
<td>ジャンル</td>
<td>ステータス</td>
</tr>
<% @items.each do |item| %>
<tr>
<td><%= item.id %></td>
<td><%= link_to admin_item_path(item.id) do %>
<%= item.name %>
<% end %>
</td>
<td><%= item.price %></td>
<td><%= item.genre.name %></td>
<td>
<% if item.is_active == true %>
<div class="text-success">販売中</div>
<% else %>
<div class="text-secondary">販売停止中</div>
<% end %>
</td>
<% end %>
</tr>
</tbody>
</table>
</div>
<div class ="col-ml-6">
<%= link_to "+" , new_admin_item_path, class: 'btn btn-outline-dark' %>
</div>
</div>
</div>
<%= paginate @items %>


