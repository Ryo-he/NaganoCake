<table>
<tbody>
<tr>
<th>
商品一覧
</th>
</tr>
<tr>
<td>商品ID</td>
<td>商品名</td>
<td>税抜き価格</td>
<td>ジャンル</td>
<td>ステータス</td>
</tr>
<% @items.each do |item| %>
<tr>
<td><%= item.id %></td>
<td><%= link_to admin_item_path(item.id) do %>
<%= item.name %>
<% end %>
</td>
<td><%= item.price %></td>
<td><%= item.genre.name %></td>
<td>
<% if item.is_active == true %>
<%= '販売中' %>
<% else %>
<%= '販売停止中' %>
<% end %>
</td>
<% end %>
</tr>
</tbody>
</table>
<%= paginate @items %>


