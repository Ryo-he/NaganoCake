<div class="container">
<div class="row">
<div class ="col-ml-4"></div>
<table>
<tbody>
<tr>
<th>
商品新規登録
</th>
<%= form_with model: @item,url: admin_items_path, local: true do |f| %>
<tr>
<td>
商品画像
</td>
<td>
<%= f.file_field :image, placeholder: "商品画像", accept: "image/*" %>
</td>
</tr>
<tr>
<td>
商品名
</td>
<td>
<%= f.text_field :name %>
</td>
</tr>
<tr>
<td>
商品説明
</td>
<td>
<%= f.text_area :introduction %>
</td>
</tr>
<tr>
<td>
ジャンル
</td>
<td>
<%= f.collection_select(:genre_id, @genres, :id, :name, {prompt: "選択してください"}) %>
</td>
</tr>
<tr>
<td>
税抜価格
</td>
<td>
<%= f.text_field :price, placeholder: "1000" %>円
</td>
</tr>
<tr>
<td>
販売ステータス
</td>
<td>
<%= f.label :is_active, '販売中', value: true %>
<%= f.radio_button :is_active, '販売中' %>
<%= f.label :is_active, '販売停止中', value: false %>
<%= f.radio_button :is_active, '販売停止中' %>
</td>
</tr>
<tr>
<td>
<input class="btn btn-success" type="submit" value="新規登録">
</td>
</tr>
</tbody>
</table>
<% end %>
</div>
</div>

