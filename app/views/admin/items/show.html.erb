<div class="container">
<div class="row">
<div class ="col-ml-2"></div>
<h3>商品詳細</h3>
</div>
</div>
<div class="container">
<div class="row">
<div class ="col-lg-4">
<% if @item.image.attached? %>
<%= image_tag @item.image, size: "300x300" %>
<% else %>
<%= image_tag '/assets/no_image.jpg', size: "300x300" %>
<% end %>
</div>

<div class ="col-lg-8">
<table>
<tbody>
<tr>
<td>商品名</td>
<td>
<%= @item.name %>
</td>
</tr>
<tr>
<td>商品説明</td>
<td><%= @item.introduction %></td>
</tr>
<tr>
<td>ジャンル</td>
<td><%= @item.genre.name %></td>
</tr>
<tr>
<td>税込価格</br>（税抜価格）</td>
<td>
<%= @item.add_tax_price %>(<%= @item.price %>)円
</td>
</tr>
<tr>
<td>ステータス</td>
<td>
<% if @item.is_active == true %>
<div class="text-success">販売中</div>
<% else %>
<div class="text-secondary">販売停止中</div>
<% end %>
</td>
</tr>
<tr>
<td>
<%= link_to "編集する",edit_admin_item_path(@item.id), class: "btn btn-success" %>
</td>
</tr>
</tbody>
</table>
</div>