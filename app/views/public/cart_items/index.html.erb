<%= link_to "カートを空にする", public_destroy_all_path, method: :delete, class: "btn btn-danger btn-sm"%>
<h2>ショッピングカート</h2>
<table border = '1' >
  <thead>
<th>商品名</th>
<th>単価（税込み）</th>
<th>数量</th>
<th>小計</th>
<th></th>
</thead>
<tbody>
<% @cart_items.each do |cart_item| %>
<tr>
<td><% if cart_item.item.image.attached? %>
<%= image_tag cart_item.item.image, size: "50x50" %>
<% else %>
<%= image_tag '/assets/no_image.jpg', size: "50x50" %>
<% end %>
<%= cart_item.item.name %></td>
<td><%= cart_item.item.add_tax_price %></td>
<%= form_with model: cart_item, url: public_cart_item_path(cart_item.id), local: true do |f| %>
<td>
<%= f.select :amount, *[1..99] %>
<%= f.submit '変更' %>
</td>
<% end %>
<td><%= cart_item.subtotal %></td>
<td><%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
<%= @total += cart_item.subtotal %>
</tr>
<% end %>
</tbody>
</table>
<%= link_to "買い物を続ける", public_items_path, class: "btn btn-primary btn-sm" %>
<%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-success btn-sm" %>
