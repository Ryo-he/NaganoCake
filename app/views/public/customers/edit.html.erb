<h1>会員情報編集</h1>
<%= form_with model : @customer, url: edit_public_customer_path(current_customer), local: true do |f| %>
<p>氏名</p>
<%= f.text_field :first_name %><space><%= f.text_field :last_name %></space>
<p>フリガナ</p>
<%= f.text_field :first_name_kana %><space><%= f.text_field :last_name_kana %></space>
<p>郵便番号</p>
<%= f.text_field :postal_code %>
<p>住所</p>
<%= f.text_field :address %>
<p>電話番号</p>
<%= f.text_field :telephone_number %>
<p>メールアドレス</p>
<%= f.text_field :email %>

<%= f.submit '編集内容を保存' %>
<% end %>
<%= link_to '退会する', public_customer_unsubscribe_path %>
