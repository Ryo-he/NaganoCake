<h3>会員情報編集</h3>
<%= form_with model: @customer, url: public_customer_path, local: true do |f| %>
<table>
<tbody>
<tr>
<td>氏名</td>
<td>
<%= f.text_field :first_name %>
</td>
<td><%= f.text_field :last_name %></td>
</tr>
<tr>
<td>フリガナ</td>
<td><%= f.text_field :first_name_kana %></td>
<td><%= f.text_field :last_name_kana %></td>
</tr>
<tr>
<td>郵便番号</td>
<td>
<%= f.text_field :postal_code %>
</td>
</tr>
<tr>
<td>住所</td>
<td>
<%= f.text_field :address, size: 40%>
</td>
</tr>
<tr>
<td>電話番号</td>
<td>
<%= f.text_field :telephone_number %>
</td>
</tr>
<tr>
<td>メールアドレス</td>
<td><%= f.text_field :email %></td>
</tr>
<tr>
<td>
<input class="btn btn-success" type="submit" value="編集内容を保存">
<% end %>
</td>
<td>
<%= link_to '退会する', public_unsubscribe_path,class: "btn btn-danger" %>
</td>
</tr>
</tbody>
</table>
