<h4>配送先登録/一覧</h4>
<%= form_with model: @address,url: public_deliveries_path, local: true do |f| %>
<table>
<tbody>
<tr>
<td>郵便番号（ハイフンなし）</td>
<td><%= f.text_field :postal_code %></td>
</tr>
<tr>
<td>住所</td>
<td><%= f.text_field :resident, size:40 %></td>
</tr>
<tr>
<td>宛名</td>
<td><%= f.text_field :name %></td>
<td><input class="btn btn-success" type="submit" value="新規登録"></td>
<% end %>
</tr>
</tbody>
</table>

<table border="1">
<tbody>
<tr>
<td>郵便番号</td>
<td>住所</td>
<td>宛名</td>
</tr>
<% @addresses.each do |address| %>
<tr>
<td><%= address.postal_code %></td>
<td><%= address.resident %></td>
<td><%= address.name %></td>
<td><%= link_to '編集する', edit_public_delivery_path(address.id),class: "btn btn-success btn-sm" %>
<%= link_to '削除する', public_delivery_path(address.id), method: :delete,"data-confirm"=>"本当に削除しますか？" ,class: "btn btn-danger btn-sm"%>
<% end %>
</td>
</tr>
</tbody>
</table>