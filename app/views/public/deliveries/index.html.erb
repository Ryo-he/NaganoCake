<h1>配送先登録/一覧</h1>
<%= form_with model: @address,url: public_deliveries_path, local: true do |f| %>
<p>郵便番号（ハイフンなし）</p>
<%= f.text_field :postal_code %>
<p>住所</p>
<%= f.text_field :address %>
<p>宛名</p>
<%= f.text_field :name %>
<%= f.submit '新規登録' %>
<% end %>

<p>郵便番号</p>
<p>住所</p>
<p>宛名</p>
<% @addresses.each do |address| %>
<%= address.postal_code %>
<%= address.address %>
<%= address.name %>
<%= link_to '編集する', edit_public_delivery_path(address.id) %>
<%= link_to '削除する', destroy_public_delivery_path(address.id), method: :delete,"data-confirm"=>"本当に削除しますか？" %>
<% end %>