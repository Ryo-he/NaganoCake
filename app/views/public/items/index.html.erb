<div class="container">  
<div class="row">

<h3>商品一覧(全<%= @item_count %>件)</h3>
</div>
</div>

<div class="container">  
<div class="row">


<% @items.each do |item| %>

<div class = "col-lg-3">
<% if item.image.attached? %>
<%= image_tag item.image, size: "100x100" %>
<% else %>
<%= image_tag '/assets/no_image.jpg', size: "100x100" %>
<% end %>
<p>
<%= link_to item_path(item.id) do %>
<%= item.name %>
<% end %>
</p>
<p>￥<%= item.add_tax_price %></p>
</div>
<% end %>

<%= paginate @items %>
</div>
</div>