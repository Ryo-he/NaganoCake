<h3>商品一覧(全<%= @item_count %>件）</h3>
<% @items.each do |item| %>
<% if item.image.attached? %>
<%= image_tag item.image, size: "50x50" %>
<% else %>
<%= image_tag '/assets/no_image.jpg', size: "50x50" %>
<% end %>
<p>商品名</p>
<%= link_to public_item_path(item.id) do %>
<%= item.name %>
<% end %>
<p>￥</p><%= item.add_tax_price %>

<% end %>

<%= paginate @items %>