<h1>注文情報入力</h1>
<%= form_with model: @order, url: public_confirm_path, local: true do |f| %>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label 'クレジットカード', Order.payment_methods_i18n[:credit_card] %>

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label '銀行振り込み', Order.payment_methods_i18n[:transfer]%>

<h3>お届け先</h3>

<%= f.radio_button :select_address, 1 %>
<%= f.label :address, "ご自身の住所" %>
<%= current_customer.address %>


<%= f.radio_button :select_address, 2 %>
<%= f.label :address, "登録済みの住所から選択" %>
<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address ) %>

<%= f.radio_button :select_address, 3 %>
<%= f.label :address, "新しいお届け先" %>
<p>郵便番号（ハイフンなし）</p>
<%= f.text_field :postal_code %>
<p>住所</p>
<%= f.text_field :address %>
<p>宛名</p>
<%= f.text_field :delivery_name %>

<%= f.submit '確認画面に進む' %>

<% end %>
