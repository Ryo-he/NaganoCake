<h1>注文情報入力</h1>
<%= form_with model: @order, url: '/orders/confirm', local: true do |f| %>
<h3>支払方法</h3>
<%= f.label :payment_method, "クレジットカード" %>
<%= f.radio_button :payment_method, "credit_card" %>
<%= f.label :payment_method, "銀行振り込み" %>
<%= f.radio_button :payment_method, "transfer" %>
<h3>お届け先</h3>
<%= f.label :address, "ご自身の住所" %>
<%= f.radio_button :select_address, 'current_address' %>
<%= current_customer.address %>

<%= f.label :address, "登録済みの住所から選択" %>
<%= f.radio_button :select_address, 'registered_address' %>
<%= f.select :address_id, option_from_collection_for_select(Address.all, :id, :full_address ) %>

<%= f.label :address, "新しいお届け先" %>
<%= f.radio_button :select_address, 'new_address' %>
<p>郵便番号（ハイフンなし）</p>
<%= f.text_field :postal_code %>
<p>住所</p>
<%= f.text_field :address %>
<p>宛名</p>
<%= f.text_field :delivery_name %>

<%= f.submit '確認画面に進む' %>

<% end %>
